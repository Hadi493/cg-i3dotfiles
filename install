#!/bin/bash

set -e  # exit on error

DOTFILES_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

echo "Installing dotfiles version: $(cat $DOTFILES_DIR/VERSION)"

# i3 config
echo "ðŸ”— Linking i3 config..."
mkdir -p ~/.config/i3
ln -sf "$DOTFILES_DIR/config/i3/config" ~/.config/i3/config

# polybar config
echo "ðŸ”— Linking polybar config..."
mkdir -p ~/.config/polybar
ln -sf "$DOTFILES_DIR/config/polybar/"* ~/.config/polybar/

# i3lock config
echo "ðŸ”— Linking polybar config..."
mkdir -p ~/.config/i3lock
ln -sf "$DOTFILES_DIR/config/i3lock/"* ~/.config/i3lock/


# nvim config
echo "ðŸ”— Linking Neovim config..."
mkdir -p ~/.config/nvim
ln -sf "$DOTFILES_DIR/config/nvim/"* ~/.config/nvim/

echo "âœ… All configs linked."

